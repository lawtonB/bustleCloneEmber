{{#if updateStoryForm}}
<h3>Update {{story.headline}}</h3>
  <div>
    <form>
      <div class="form-group">
        <label for='headline'>Headline</label>
        {{input value=headline id="headline"}}
      </div>

      <div class="form-group">
        <label for='author'>Author</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for='image'>Image URL</label>
        {{input value=image id="image"}}
      </div>

      <div class="form-group">
        <label for='content'>Content</label>
        {{input value=content id="content"}}
      </div>
      <button {{action 'update' story}}>Save</button>
    </form>
  </div>
  {{else}}
  <button {{action 'updateStoryForm'}}>Update</button>
  {{/if}}
